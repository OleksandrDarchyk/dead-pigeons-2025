{
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "isolatedModules": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "strict": true,
    "types": ["vite/client"],

    // For import aliases like @core/..., @utilities/..., @atoms/...
    "baseUrl": ".",
    "paths": {
      "@core/*": ["core/*"],
      "@utilities/*": ["utilities/*"],
      "@atoms/*": ["atoms/*"],
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"],
      "@hooks/*": ["hooks/*"]
    }
  },

  "include": ["**/*"]
}
