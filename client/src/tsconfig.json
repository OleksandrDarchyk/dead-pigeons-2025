{
  "extends": "../tsconfig.settings.json",
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "isolatedModules": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "strict": true,
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@core/*": ["core/*"],
      "@ui/*": ["ui/*"],
      "@utils/*": ["utils/*"],
      "@pages/*": ["ui/pages/*"],
      "@layouts/*": ["ui/layouts/*"],
      "@hooks/*": ["utils/hooks/*"]
    },
    "skipLibCheck": true
  },
  "include": ["**/*"],
  "references": [
    { "path": "./core" },
    { "path": "./utils" },
    { "path": "./ui" }
  ]
}
