{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "noEmit": false,
    "composite": true,
    "incremental": true,
    "outDir": "./dist",
    "rootDir": ".",

    "baseUrl": ".",
    "paths": {
      "@core/*": ["./src/core/*"],
      "@hooks/*": ["./src/utils/hooks/*"],
      "@pages/*": ["./src/ui/pages/*"],
      "@layouts/*": ["./src/ui/layouts/*"],
      "@app/*": ["./src/ui/app/*"]
    }

  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "tmp",
    "dist",
    "**/*.js"
  ]
}