{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "noEmit": false,
    "composite": true,
    "incremental": true,
    "outDir": "./dist",
    "rootDir": ".",

    "baseUrl": "./src",
    "paths": {
      "@atoms/*": ["atoms/*"],
      "@components/*": ["components/*"],
      "@core/*": ["core/*"],
      "@utilities/*": ["utilities/*"],
      "@pages/*": ["pages/*"],
      "@hooks/*": ["hooks/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "tmp",
    "dist",
    "**/*.js"
  ]
}
